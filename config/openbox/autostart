# Disable touchpad
xinput set-prop 11 "Device Enabled" 0 &

# Caps is also Ctrl
setxkbmap -option "ctrl:nocaps" &

# Start ibus-mozc
ibus-daemon -dx &

# Start compositor
picom -bc --config ~/.picom.conf

# Start file manager as a daemon
pcmanfm -d &

# Set wallpaper and color scheme
wal -qR &

# Start polybar
${HOME}/dotfiles/bin/polybar-wal &
